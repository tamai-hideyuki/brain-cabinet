                      },
                      "responseTimeMs": {
                        "type": "integer",
                        "description": "回答時間（ミリ秒、review.submit用、オプション）"
                      },
                      "questionsAttempted": {
                        "type": "integer",
                        "description": "試行した質問数（review.submit用、オプション）"
                      },
                      "questionsCorrect": {
                        "type": "integer",
